---
interface Props {
  title: string;
  description?: string;
}

const { title, description = "TK ABA Kalikajar - Terwujudnya Generasi Qur'ani yang Berakhlaqul Karimah" } = Astro.props;
---

<!doctype html>
<html lang="id">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    <!-- SEO Meta Tags -->
    <meta name="keywords" content="TK ABA Kalikajar, Taman Kanak-Kanak, PAUD, Wonosobo, Aisyiyah, Pendidikan Islam" />
    <meta name="author" content="TK ABA Kalikajar" />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />

    <title>{title}</title>
  </head>
  <body class="bg-gray-50">
    <nav class="bg-white shadow-lg sticky top-0 z-50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between items-center h-20">
          <div class="flex items-center space-x-3">
            <img src="/images/logo.png" alt="Logo TK ABA Kalikajar" class="h-14 w-14 object-contain" onerror="this.style.display='none'" />
            <div>
              <h1 class="text-xl font-bold text-green-700">TK ABA KALIKAJAR</h1>
              <p class="text-xs text-gray-600">Kalikajar, Wonosobo</p>
            </div>
          </div>

          <!-- Desktop Navigation -->
          <div class="hidden md:flex space-x-8">
            <a href="/" class="text-gray-700 hover:text-green-600 font-medium transition-colors">Beranda</a>
            <a href="/tentang" class="text-gray-700 hover:text-green-600 font-medium transition-colors">Tentang Kami</a>
            <a href="/profil" class="text-gray-700 hover:text-green-600 font-medium transition-colors">Profil</a>
            <a href="/guru-staff" class="text-gray-700 hover:text-green-600 font-medium transition-colors">Guru & Staff</a>
            <a href="/siswa" class="text-gray-700 hover:text-green-600 font-medium transition-colors">Siswa</a>
            <a href="/galeri" class="text-gray-700 hover:text-green-600 font-medium transition-colors">Galeri</a>
            <a href="/kontak" class="text-gray-700 hover:text-green-600 font-medium transition-colors">Kontak</a>
          </div>

          <!-- Mobile menu button -->
          <button id="mobile-menu-button" class="md:hidden text-gray-700 hover:text-green-600 focus:outline-none">
            <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
            </svg>
          </button>
        </div>

        <!-- Mobile Navigation -->
        <div id="mobile-menu" class="hidden md:hidden pb-4">
          <a href="/" class="block py-2 text-gray-700 hover:text-green-600 font-medium">Beranda</a>
          <a href="/tentang" class="block py-2 text-gray-700 hover:text-green-600 font-medium">Tentang Kami</a>
          <a href="/profil" class="block py-2 text-gray-700 hover:text-green-600 font-medium">Profil</a>
          <a href="/guru-staff" class="block py-2 text-gray-700 hover:text-green-600 font-medium">Guru & Staff</a>
          <a href="/siswa" class="block py-2 text-gray-700 hover:text-green-600 font-medium">Siswa</a>
          <a href="/galeri" class="block py-2 text-gray-700 hover:text-green-600 font-medium">Galeri</a>
          <a href="/kontak" class="block py-2 text-gray-700 hover:text-green-600 font-medium">Kontak</a>
        </div>
      </div>
    </nav>

    <main>
      <slot />
    </main>

    <footer class="bg-gray-800 text-white mt-16">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          <div>
            <h3 class="text-xl font-bold mb-4">TK ABA Kalikajar</h3>
            <p class="text-gray-300 text-sm">
              Taman Kanak-Kanak 'Aisyiyah Bustanul Athfal yang mengembangkan pendidikan berbasis Islam dengan kurikulum terpadu.
            </p>
          </div>

          <div>
